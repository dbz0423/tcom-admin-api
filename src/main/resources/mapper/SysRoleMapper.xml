<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zhu.tcomadminapi.mapper.SysRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="SysRoleVOMap" type="top.zhu.tcomadminapi.model.vo.SysRoleVO">
        <id column="pk_id" property="pkId"/>
        <result column="name" property="name"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="getRolePage" resultMap="SysRoleVOMap">
        select tr.* from t_role tr
        <where>
            <if test="query.name != null and query.name != ''  ">
                and tr.name like concat('%',#{query.name},'%')
            </if>
        </where>
        order by tr.create_time desc
    </select>

</mapper>
