<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zhu.tcomadminapi.mapper.SubjectLabelMapper">

    <!-- 根据专题ID查询所有标签 -->
    <select id="getBySubjectId" resultType="top.zhu.tcomadminapi.model.entity.SubjectLabel">
        SELECT pk_id, subject_id, title, brief, cover, create_time, update_time
        FROM t_subject_label
        WHERE subject_id = #{subjectId}
    </select>

    <!-- 根据标签ID删除关联的记录 -->
    <delete id="deleteByLabelId">
        DELETE FROM t_subject_label WHERE label_id = #{labelId}
    </delete>

</mapper>
