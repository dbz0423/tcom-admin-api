<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zhu.tcomadminapi.mapper.SubjectAssociatedMapper">

    <!-- 根据专题ID查询所有关联的标签 -->
    <select id="getBySubjectId" resultType="top.zhu.tcomadminapi.model.entity.SubjectAssociated">
        SELECT * FROM t_subject_associated WHERE subject_id = #{subjectId}
    </select>

    <!-- 根据标签ID查询所有关联的专题 -->
    <select id="getByLabelId" resultType="top.zhu.tcomadminapi.model.entity.SubjectAssociated">
        SELECT * FROM t_subject_associated WHERE label_id = #{labelId}
    </select>

    <!-- 删除某个专题和标签的关联 -->
    <delete id="deleteBySubjectAndLabel">
        DELETE FROM t_subject_associated WHERE subject_id = #{subjectId} AND label_id = #{labelId}
    </delete>

</mapper>
